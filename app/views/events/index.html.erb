<h4>
	Plan a great event in minutes!
</h4>

<div class="row">
	<div id = "form">
		<h1>Get Started</h1>
				<%= form_for @event do |e| %>
					<ol>
						<li><%= e.text_field :name ,:placeholder => "Event Name"%></li>
						<li><%= e.text_field :location ,:placeholder => "Where will be?"%></li>
						<li><%= e.number_field :time , :minute_step => 30, :placeholder => "What time will it start?" %></li>
						<li><%= e.time_select :time , :minute_step => 30 %></li>

						<div id	= "create-slider" >
							<%= link_to "Create Event" , "#", :id => "slider",:class => 'btn btn-large btn-info' %>
						</div>

						<div id	= "new-slider" >
							<li><%= e.text_field :name, :placeholder => "What's your email?" %> <%= e.submit "Go!", :class => 'btn btn-large btn-info'%></li>
					</ol>
				<% end %>	
		</div>

		<script>
			$('#slider').click(function() {
				$('#new-slider').slideDown('slow');
				$('#create-slider').slideUp('slow');
				console.log('click slider');
			});
		</script>
</div>
